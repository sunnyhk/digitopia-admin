@import 'nib'

fade()
	transition-property: opacity
	transition-duration: .5s
	transition-timing-function: ease

body
	background-color:#eee

.is-logged-in
	.hidden-logged-in
		display:none!important

.is-logged-out
	.hidden-logged-out
		display:none!important

#ajax-status
	position:fixed
	right:0px
	bottom:0px

.admin-scope
	#admin-content
		margin-top:70px
		margin-bottom:100px

	i
		margin-right:15px
		vertical-align: middle

	.pull-right i
		margin-right:0px
		margin-left:15px

	.table-hover
		tr
			cursor:pointer

	.input-margins
		padding:7px

	.upload-viewport
		position:relative
		height:300px
		img
			transition: all 0.5s ease;
		.dropzone
			position:absolute
			top:0px!important
			width:100%
			height:300px
			opacity: 0
			transition: all 0.5s ease;
			paddding-top:40%
		.dropzone:hover
			opacity: 0.8
		.loading
			opacity: 1

.position-relative
		position:relative

input[type="text"],input[type="date"],input[type="time"],input[type="number"], input[type="password"], input[type="tel"], select, textarea
	padding-right:30px
	opacity:.5
	fade()

	&:focus
		opacity:1
		background-position: 0 0

textarea
	min-height:200px

.input-ok-indicator
	opacity:0
	position:absolute
	right:25px
	top:7px
	color: #999
	fade()

.input-ok
	input[type="text"],input[type="date"],input[type="time"],input[type="number"],input[type="password"], input[type="tel"], select, textarea
		opacity: 1
		fade()
	.input-ok-indicator
		opacity:1
		fade()

.validation-help
	opacity:0
	padding-left:5px
	height:18px
	color: red

.input-error
	&.touched
		.validation-help
			opacity:1

.input-with-icon
	padding-left:25px!important

.input-icon
	position:absolute
	top: 3px
	left: 0px

.cc-brand
	position:absolute
	top:6px
	right:45px
	img
		height:20px

.btn
	&.disabled
		opacity: 0.5
		pointer-events: none
	&[disabled]
		opacity: 0.5
		pointer-events: none

.parent-relation
	i
		margin-left:15px
